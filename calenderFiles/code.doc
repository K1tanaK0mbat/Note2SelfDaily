<!DOCTYPE html>
<html>
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="row time-block">
        <div class="col-2 col-md-1 hour text-center py-3">9AM</div>
        <textarea class="col-8 col-md-10 description" rows="3"></textarea>
        <button class="btn saveBtn col-2 col-md-1" aria-label="save">
            <i class="fas fa-save" aria-hidden="true"></i>
        </button>
    </div>
    <!-- Add more time-blocks as needed -->

    <script>
        $(document).ready(function () {
            // Function to load saved input from local storage
            function loadInputFromLocalStorage($textarea) {
                var blockId = $textarea.siblings(".hour").text(); // Get the text from the adjacent hour element
                var savedInput = localStorage.getItem(blockId);
                if (savedInput !== null) {
                    $textarea.val(savedInput);
                }
            }

            // Loop through all time-blocks and load saved input
            $(".time-block").each(function () {
                var $textarea = $(this).find(".description"); // Find the textarea within the time-block
                loadInputFromLocalStorage($textarea);
            });

            // Function to save input to local storage when the save button is clicked
            $(".saveBtn").on("click", function () {
                var $textarea = $(this).siblings(".description"); // Find the textarea adjacent to the clicked button
                var blockId = $(this).siblings(".hour").text(); // Get the text from the adjacent hour element
                var inputText = $textarea.val();
                localStorage.setItem(blockId, inputText);
            });
        });
    </script>
</body>
</html>


    